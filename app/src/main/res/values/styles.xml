<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TODO: Add necessary styles -->
    <style name="MyGenericButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_generic_height</item>
        <item name="android:background">@color/genericBtnBgColor</item>
        <item name="android:color">@color/genericBtnTxtColor</item>
        <item name="android:layout_margin">@dimen/btn_generic_margin</item>
        <item name="android:padding">@dimen/btn_generic_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ElectionHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_election_list_height</item>
        <item name="android:color">@color/election_list_header</item>
        <item name="android:layout_margin">@dimen/header_election_list_margin</item>
        <item name="android:padding">@dimen/header_election_list_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ElectionListItemHeader" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/election_list_header</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ElectionListItem" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:color">@color/election_list_header</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="VoterInfoText" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/voter_info_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
